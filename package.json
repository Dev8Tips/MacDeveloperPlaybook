{
  "name": "mac-developer-playbook",
  "version": "1.0.0",
  "description": "mac-developer-playbook",
  "root": "./docs",
  "structure": {
    "readme": "README.md",
    "summary": "SUMMARY.md",
    "glossary": "GLOSSARY.md"
  },
  "dependencies": {
    "gitbook-plugin-addcssjs": "^1.0.2",
    "gitbook-plugin-remark-inline": "0.0.25",
    "gitbook-plugin-richquotes": "0.0.9",
    "gitbook-plugin-wrapclass": "0.0.3",
    "lodash": "^4.17.4"
  },
  "plugins": [
    "wrapclass",
    "addcssjs",
    "richquotes",
    "remark-inline"
  ],
  "pluginsConfig": {
    "addcssjs": {
      "css": []
    }
  },
  "devDependencies": {
    "gitbook-cli": "^2.3.2"
  },
  "scripts": {
    "docs:prepare": "gitbook install",
    "docs:watch": "npm run docs:prepare && gitbook serve",
    "docs:build": "npm run docs:prepare && rm -rf _book && gitbook build",
    "docs:publish": "npm run docs:build && git checkout gh-pages && git pull github gh-pages --rebase && cp -R _book/* . && git clean -fx node_modules && git clean -fx _book && git add . && git commit -a -m updated_docs && git push github gh-pages && git checkout develop"
  },
  "author": "Shifath Nafis",
  "license": "ISC"
}
